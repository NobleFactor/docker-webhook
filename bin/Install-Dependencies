# Install-Dependencies - Install required dependencies for docker-webhook

source "$(dirname "$0")/Declare-BashScript" "$0" "" "" "$@"

sudo apt update 
sudo apt install --yes curl gawk grepcidr ipcalc jq

sudo "${script_root}/Install-Docker"
