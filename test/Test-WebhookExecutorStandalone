#!/usr/bin/env bash

########################################################################################################################
# SPDX-FileCopyrightText: 2016-2025 Noble Factor
# SPDX-License-Identifier: MIT
########################################################################################################################

# Test-WebhookExecutorStandalone - Test webhook-executor binary directly
# shellcheck source=../bin/Declare-BashScript

source "$(dirname "$0")/../bin/Declare-BashScript" "$0" "help,command:,location:" "h" "$@"

###########
# Functions
###########

function test_command {
    local address="$1"
    local cmd="$2"

    note "==> Testing command: $cmd"

    local response=$(cd src && go run ./cmd/webhook-executor --destination "$address" --command "$cmd" --authorization "$auth_token")

    if [[ -z "$response" ]]; then
        error 0 "FAIL: No response for $cmd"
        return 1
    fi

    if ! echo "$response" | jq -e '.status and .reason and (.error == null or type == "string") and has("stdout") and has("stderr") and has("authToken") and has("correlationId")' >/dev/null 2>&1; then
        error 0 "FAIL: Invalid response for $cmd: $response"
        return 1
    fi

    success "PASS: $cmd returned: $response"
    return 0
}

function wait_for_container_and_user {

    local container="$1"
    local user="$2"
    local timeout="${3:-60}"
    local end="$(($(date +%s) + timeout))"

    while (($(date +%s) < end)); do
        local cid
        cid=$(sudo docker ps --filter "name=$container" --filter "status=running" -q 2>/dev/null) || cid=""
        if [[ -n "$cid" ]] && sudo docker exec "$container" id "$user" >/dev/null 2>&1; then
            return 0
        fi
        sleep 1
    done

    error 1 "timed out waiting for ${container}/${user}"
}

###########
# Arguments
###########

declare -r synopsis="${script_name} --help | --location LOCATION --command CMD [--command CMD ...]"
eval set -- "$script_arguments"

while [[ $# -gt 0 ]]; do
    case $1 in
    -h | --help)
        usage "$synopsis"
        ;;
    --command)
        commands="$2"
        shift 2
        ;;
    --location)
        location="$2"
        shift 2
        ;;
    --)
        shift
        break
        ;;
    *)
        error 2 "Unrecognized option: $1"
        ;;
    esac
done

[[ -n ${commands:-} ]] || error 2 "A semicolon-separated list of test commands is required."
declare -r commands

[[ -n ${location:-} ]] || error 2 "A value for location is required."
declare -r location

###########
# Main
###########

# Source hooks environment so that webhook-executor sees the environment it has when running in is container

cd "${script_root}/.." && declare -r webhook_config=$(realpath "webhook.config/$location")
declare -r hooks_env="${webhook_config}/hooks.env"

if [[ ! -f "$hooks_env" ]]; then
    error 1 "Hooks environment file not found: $hooks_env"
fi

source "$hooks_env"

# Fetch AZURE_CLIENT_SECRET from key vault

declare -r vault_name=$(echo "$WEBHOOK_KEYVAULT_URL" | awk '{ gsub(/https:\/\//, ""); sub(/\.vault\.azure\.net.*/, ""); print }')
export AZURE_CLIENT_SECRET="$(az keyvault secret show --vault-name "$vault_name" --name "$WEBHOOK_SP-password" --query value -o tsv)"

# Ensure that webhook-executor can locate its location-based configuration

export WEBHOOK_CONFIG="${webhook_config}"
declare -r destination=webhook-executor-destination

note "Starting test container: ${destination}..."

declare -r authorized_key="$(cat "${webhook_config}/ssh/id_rsa.pub")"
declare -r auth_token="$(bin/New-WebhookExecutorToken --silent)"

if [[ -n $(sudo docker ps -a --filter name=${destination} --format "{{.Names}}") ]]; then
    sudo docker container rm --force "${destination}" >/dev/null
fi

if [[ -z $(sudo docker images -q noblefactor/${destination}) ]]; then
    sudo docker build -t "noblefactor/${destination}" -f "Dockerfile.${destination}" .
fi

sudo docker run -d --name "${destination}" "noblefactor/${destination}" "${authorized_key}" >/dev/null
wait_for_container_and_user ${destination} ${destination} 60

declare -r destination_address="ssh://${destination}@$(
    sudo docker inspect --format='{{.NetworkSettings.IPAddress}}' ${destination}
):$(
    sudo docker inspect --format='{{.Config.ExposedPorts}}' "${destination}" | awk -F'[][/:]' '{print $2}'
)"

# Run test commands

declare -r start_time=$(date +%s)

note "Starting standalone webhook-executor tests for destination: $destination"
passed_tests=0
failed_tests=0

while IFS= read -r line; do
    if [[ -n ${line:-} ]]; then
        if test_command "${destination_address}" "$line"; then
            ((passed_tests++)) || :
        else
            ((failed_tests++)) || :
        fi
    fi
done < <(printf '%s' "$commands" | awk 'BEGIN { RS = "[[:space:]]*;[[:space:]]*" } { print $0 }')

declare -r end_time=$(date +%s)
declare -r elapsed=$((end_time - start_time))

note "Test Run Complete:
Status: [$passed_tests Passed, $failed_tests Failed]
Duration: ${elapsed}s"
